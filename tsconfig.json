{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
